<div class="container">

    <div class="row center-align">
        <div class="col s12">
            <h5>Unique drinks for the adventurous!</h5>
        </div>

        <!-- NEW BAR BTN -->
        <div class="col s12 add-bar-btn">
            <button class="btn modal-trigger" data-target="modal3">Add a New Bar!</button>
        </div>

        <!-- MAP -->
        <div class="col s12">
            <div id="map"></div>
        </div>

    </div>

    <!-- Modal Structure -->
    <div id="modal3" class="modal">
        <div class="modal-content">
            <h4>Add A Bar</h4>

            <div class="row">
                <form class="col s12">
                    <div class="row modal-form-row">
                        <div class="input-field col s12">
                            <input id="name" type="text" class="validate">
                            <label for="name">Name</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="city" type="text" class="validate">
                            <label for="city">City</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <textarea id="description" type="text" class="materialize-textarea validate"></textarea>
                            <label for="description">Description of Drink and Cost</label>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="modal-footer">
            <a class=" modal-action modal-close waves-effect waves-green btn-flat" id="submit">Submit</a>
        </div>
    </div>

    <!-- adds cards for each table item -->
